#!/bin/bash 

source $OPENSHIFT_CARTRIDGE_SDK_BASH

echo "15000" > env/PGCLIENT_MASTER_PORT
echo "15001" > env/PGCLIENT_STANDBY_PORT
echo "16000" > env/PGCLIENT_LOADBAL_PORT

if [ -n "$OPENSHIFT_JBOSSEWS_IP" ];
then
	client_result "pgclient adding datasources to context.xml"
	cd ~/pgclient/bin && ./setup-jbossews.sh
fi

client_result "pgclient setup completed"
